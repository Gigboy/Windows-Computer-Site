html:not(.ve-active) .page-has-right-rail {
	display: grid;
	grid-template-columns: minmax(0, 1fr) min-content;
	grid-template-rows: max-content;
}

.page {
	color: #3a3a3a;
	margin-top: 12px;
	position: relative;
}

a,
abbr, 
acronym, 
address, 
applet, 
article, 
aside, 
audio, 
b, 
big, 
blockquote, 
body, 
canvas,
center, 
cite, 
code, 
dd, 
del, 
details, 
dfn, 
div, 
dl, 
dt, 
em, 
embed, 
fieldset, 
figcaption, 
figure, 
footer, 
form, 
h1, 
h2, 
h3, 
h4, 
h5, 
h6, 
header, 
hgroup, 
html, 
i, 
iframe, 
img, 
ins, 
kbd, 
label, 
legend, 
li, 
mark, 
menu, 
nav, 
object, 
ol, 
output, 
p, 
pre, 
q, 
ruby, 
s, 
samp, 
section, 
small, 
span, 
strike, 
strong, 
sub, 
summary, 
sup, 
time, 
tt, 
u, 
ul, 
var, 
video {
	border: none;
	margin: 0;
	padding: 0;
	vertical-align: initial;
}

html:not(.ve-active) .page-has-right-rail .page__main {
	border-radius: 3px 0 0 3px;
}

.page .page__main {
	height: 100%;
}

.page__main {
	background-color: #ffffff;
	min-height: 100px;
	padding: 24px 36px;
	position: relative;
}

.page__main2 {
	background-color: rgba(250,250,210);
	min-height: 100px;
	padding: 24px 36px;
	position: relative;
	border: solid 4px;
}